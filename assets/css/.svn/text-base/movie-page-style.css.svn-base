.caption .movie-title{
	background-color: #262626;
	margin-top: 0;
	margin-bottom: 0;
	padding-top: 10px;
	padding-bottom: 10px; 
}

.caption .star-icon{
	width: 38px;
	height: 38px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 30px;
	background-image: url('../../img/star-icon.png');
}

.caption .like-icon{
	width: 38px;
	height: 38px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 30px;
	background-image: url('../../img/like-icon.png');
}

.caption a{
	display: block;
	padding-top: 10px;
	padding-bottom: 10px;
	margin-left: auto;
	margin-right: auto;
}

.caption a:hover{
	text-decoration: none;
}

.caption .more-info{
	color: #fff;
	background-color: #27ca4e;
	margin-top: 20px; 
}

.caption .watch-trailer{
	color: #858585;
	background-color: #ededed;
	margin-top: 10px;
}

/********************* Home Page Thumbs *************/
#hover-cap-4col .thumbnail {
	position:relative;
	overflow:hidden;	
}
.caption {
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	background: rgba(0,0,0,0.4);
	width: 100%;
	height: 100%;
	color:#fff !important;
	text-align: center;
}

.thumbnails{
	list-style: none;
}

