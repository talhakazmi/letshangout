.quick-ticket-title{
	margin-top: 20px;

}

.quick-ticket-title .col-md-2{
	background-color: #3a8cfc;
	padding: 8px 14px;
	text-align: center;
}

.quick-ticket-title .title-text{
	background-color: #3a8cfc;
	color: #fff;
	font-family: Roboto;
	
}

.quick-ticket-title .title-arrow{
	padding:8px 40px 8px 0px;
	background: url('../../img/arrow-bottom.png') #3a8cfc no-repeat center center; 

}

.quick-ticket-steps{
	
	padding: 10px 15px ;
	background-color:#FFFFFF;
}



.quick-ticket-steps .gray-down-arrow{
	padding:8px 40px 8px 0px;
	background: url('../../img/gray-down-arrow.png')  no-repeat center center; 
}

.quick-ticket-steps .book-session{
	padding: 5px;
	float: right;
}
.quick-ticket-steps .book-session a{
	padding: 8px 20px;
	background-color: #3a8cfc;
	color:#ffffff;
	border-radius: 4px;

}

.quick-ticket-steps .book-session a:hover{
	text-decoration: none;
}

.movies-container{
	margin-top: 10px;
	padding-left: 0px !important;

	background-color:#FFFFFF;
}

.movies-container .movies-categories{
	padding-top: 12px;
	padding-bottom: 12px;
	text-align: center;
	
}
.movies-container .movies-categories a{
	color: #b1b1b1;
	font-weight: bold;

}
.movies-container .movies-categories .selected{
	color:#3a8cfc;
}

.movies-container .ad {
	margin-top: 20px;
	margin-bottom: 20px;
}


